<%- include("partials/front_page_header.ejs");-%>

    <div class="inner-container">
        <div class="form-container">
            <div class="form-title-text-container">
                <h3 class="form-title">Login to continue</h3>
            </div>
            <%- include("partials/messages.ejs"); -%>
                <form action="/login" method="POST" class="mt-4">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control form-input" id="exampleInputEmail1"
                            placeholder="Enter email adress" name="email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control form-input" id="password" placeholder="Password"
                            name="password">
                    </div>
                    <button type="submit" class="btn btn-danger">Login now</button>
                </form>

                <p class="mt-3">New here? <a href="/register">Click here to register</a></p>
        </div>
    </div>


    <%- include("partials/front_page_footer.ejs");-%>